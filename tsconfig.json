{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "allowJs": false,
    "declaration": true,
    "removeComments": false,
    "rootDir": "./",
    "outDir": "./build",
    "importHelpers": false,
    "downlevelIteration": true,
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "verbatimModuleSyntax": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
